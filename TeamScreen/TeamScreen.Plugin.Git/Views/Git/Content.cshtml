@model TeamScreen.Plugin.Git.Models.GitModel

<h1>@Model.RepositoryName</h1>

<div class="container">
    <div class="row">
        <div class="col-xs-6">
            <h2>Recent commits:</h2>
            @foreach (var commit in Model.Commits)
            {
                <div class="clearfix">
                    <h4>@commit.Message</h4>
                    @commit.Date
                    @commit.AuthorEmail
                    <img class="photo pull-right" src="@Url.Action("GetByEmail", "Photo", new {email = commit.AuthorEmail})" />
                </div>
            }
        </div>
        <div class="col-xs-6"></div>
    </div>
</div>