@model IEnumerable<TeamScreen.Models.Jira.JiraIssuesModel>

<h1>JIRA status</h1>

<table class="issues-table">
    <tr>
        @foreach (var column in Model)
        {
            <th>@column.Column</th>
        }
    </tr>
    <tr>
        @foreach (var column in Model)
        {
            <td class="issue-column">
                <ul class="issue-list">
                    @foreach (var issue in column.Issues)
                {
                        <li>
                            <p>
                                <b>@issue.Key</b> 
                                <br />
                                @issue.Fields.Summary
                            </p>
                        </li>
                    }
                </ul>
            </td>
        }
    </tr>
</table>

